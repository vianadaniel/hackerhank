{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES6", "ES7", "ESNext"],
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
